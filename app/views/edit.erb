<h1>Edit an article</h1>

<form action="/articles/<%= @article.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  Change the Title: <input type="text" name ="article[title]" value = "<%= @article.title %>" id = "title">
  Change the Content: <input type="text" name="article[content]" value="<%= @article.content %>" id = "content">
  <input type="submit" value="submit">
  
</form>